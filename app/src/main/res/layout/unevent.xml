<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="119dp"
        android:background="#26CDBFBF"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="1dp">

        <ImageView
            android:id="@+id/imageevent1"

            android:layout_width="71dp"
            android:layout_height="73dp"


            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="248dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/even_nom"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="Evennom"
                android:inputType="text"
                android:letterSpacing="0.1"
                android:textColor="#000000"
                android:textColorHint="#591414"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/even_description"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:hint="Evendesctption"
                android:inputType="text"
                android:letterSpacing="0.1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="14dp" />


            <CheckBox
                android:id="@+id/interiseevn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:buttonTint="#DA5F5F"


            android:clickable="false"
            android:hint="Je participe"
            android:inputType="text"
            android:letterSpacing="0.1"
            android:textAllCaps="false"

            android:textColor="#DA5F5F"
            android:textColorHint="#F84242"


            android:textSize="12dp"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="122dp"

            android:layout_height="41dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/edit_even"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"

                android:layout_marginLeft="5dp"

                android:src="@drawable/cherch" />

            <ImageView
                android:id="@+id/delet_even"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_horizontal|center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/supprimer" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4a5a71"></LinearLayout>
</LinearLayout>